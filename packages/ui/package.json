{
    "name": "react-simplix-ui",
    "version": "0.1.0",
    "description": "A lightweight, modular UI constructor for React. Designed around simple building blocks, strict typing, and zero unnecessary magic.",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Deffick",
        "url": "https://github.com/d9ff1ck"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/d9ff1ck/react-simplix-ui.git"
    },
    "homepage": "https://github.com/d9ff1ck/react-simplix-ui#readme",
    "bugs": {
        "url": "https://github.com/d9ff1ck/react-simplix-ui/issues"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./*": {
            "import": "./dist/*.js",
            "require": "./dist/*.cjs"
        }
    },
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "dependencies": {
        "clsx": "^2.1.1"
    },
    "devDependencies": {
        "@types/react": "^19.2",
        "@types/react-dom": "^19.2",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react-hooks": "^7.0.1",
        "prettier": "^3.7.3",
        "react": "^19.2",
        "react-dom": "^19.2",
        "tsup": "^8.5",
        "typescript": "^5.7"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=9"
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "pnpm clean && tsup && pnpm typecheck",
        "clean": "rm -rf dist",

        "lint": "eslint .",
        "typecheck": "tsc -p tsconfig.library.json --noEmit",
        "check": "pnpm lint && pnpm typecheck",

        "prepublishOnly": "pnpm build && pnpm check"
    },
    "keywords": [
        "react",
        "simplix",
        "ui",
        "atomic",
        "components",
        "typescript",
        "design-system",
        "ui-constructor"
    ],
    "packageManager": "pnpm@10.22.0"
}
