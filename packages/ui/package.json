{
    "name": "react-simplix-ui",
    "version": "0.1.0",
    "author": {
        "name": "Deffick",
        "url": "https://github.com/d9ff1ck"
    },
    "description": "A lightweight, modular UI constructor for React. Designed around simple building blocks, strict typing, and zero unnecessary magic.",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },

    "devDependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "tsup": "^8.5.1"
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix"
    },
    "keywords": [
        "react",
        "simplix",
        "ui",
        "components",
        "modular",
        "typescript"
    ],
    "packageManager": "pnpm@10.22.0"
}
