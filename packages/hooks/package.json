{
    "name": "@simplix/hooks",
    "version": "0.1.0",
    "description": "A modular, type-safe foundation for Simplix UI. Headless logic, utilities, and shared primitives for building consistent UI components.",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Deffick",
        "url": "https://github.com/d9ff1ck"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/d9ff1ck/react-simplix-ui.git"
    },
    "homepage": "https://github.com/d9ff1ck/react-simplix-ui",
    "bugs": {
        "url": "https://github.com/d9ff1ck/react-simplix-ui/issues"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "dependencies": {
        "@simplix/utils": "workspace:*"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=9"
    },
    "scripts": {
        "build": "tsup --config ../config/tsup.config.ts",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "react",
        "react-ui",
        "react-components",
        "ui-library",
        "design-system",
        "component-library",
        "typescript",
        "headless",
        "headless-ui",
        "atomic-design",
        "ui-constructor",
        "tokens",
        "theming",
        "css-agnostic",
        "unopinionated",
        "rslx",
        "simplix"
    ],
    "packageManager": "pnpm@10.22.0"
}
