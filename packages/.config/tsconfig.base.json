{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",

        "lib": [
            "DOM",
            "ES2020"
        ],
        "skipLibCheck": true,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "isolatedModules": true
    },

    "exclude": [
        "dist",
        "node_modules"
    ]
}